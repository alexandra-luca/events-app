<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preference_category_event_types">

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_1"
            android:title="Concerts" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_2"
            android:title="Parties" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_3"
            android:title="Stand-up comedy" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_4"
            android:title="Theatre play" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_5"
            android:title="Operas" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_6"
            android:title="Drive-in cinema" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_7"
            android:title="LAN parties" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preference_category_event_location">
        <ListPreference
            app:defaultValue="nearby"
            app:entries="@array/location_entries"
            app:entryValues="@array/location_values"
            app:key="location"
            app:title="Event location"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preference_category_event_access">
        <ListPreference
            app:defaultValue="free"
            app:entries="@array/pricing_entries"
            app:entryValues="@array/pricing_values"
            app:key="pricing"
            app:title="Event pricing"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>